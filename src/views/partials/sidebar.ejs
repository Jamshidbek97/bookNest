<aside class="sidebar">
  <!-- Sidebar Header -->
  <div class="sidebar-header">
    <h2 class="sidebar-brand">
      <i class="fas fa-book-open"></i>
      <span>BookNest</span>
    </h2>
    <button class="sidebar-toggle">
      <i class="fas fa-times"></i>
    </button>
  </div>

  <!-- Sidebar Menu -->
  <nav class="sidebar-menu">
    <ul class="nav flex-column">
      <!-- Dashboard -->
      <li class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
        <a class="nav-link" href="/admin">
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Dashboard</span>
        </a>
      </li>

      <!-- Books Section -->
      <li
        class="nav-item <%= currentPage.startsWith('books') ? 'active' : '' %>"
      >
        <a class="nav-link" href="/admin/books">
          <i class="fas fa-fw fa-book"></i>
          <span>Books</span>
          <span class="badge bg-primary rounded-pill ms-auto"
            ><%= bookCount || 0 %></span
          >
        </a>
      </li>

      <!-- Orders -->
      <li
        class="nav-item <%= currentPage.startsWith('orders') ? 'active' : '' %>"
      >
        <a class="nav-link" href="/admin/orders">
          <i class="fas fa-fw fa-shopping-cart"></i>
          <span>Orders</span>
          <span class="badge bg-warning rounded-pill ms-auto"
            ><%= pendingOrders || 0 %></span
          >
        </a>
      </li>

      <!-- Users -->
      <li
        class="nav-item <%= currentPage.startsWith('users') ? 'active' : '' %>"
      >
        <a class="nav-link" href="/admin/users">
          <i class="fas fa-fw fa-users"></i>
          <span>Users</span>
        </a>
      </li>

      <!-- Categories -->
      <li
        class="nav-item <%= currentPage.startsWith('categories') ? 'active' : '' %>"
      >
        <a class="nav-link" href="/admin/categories">
          <i class="fas fa-fw fa-tags"></i>
          <span>Categories</span>
        </a>
      </li>
    </ul>

    <!-- Divider -->
    <hr class="sidebar-divider" />

    <!-- System Section -->
    <div class="sidebar-heading">System</div>
    <ul class="nav flex-column">
      <li
        class="nav-item <%= currentPage.startsWith('settings') ? 'active' : '' %>"
      >
        <a class="nav-link" href="/admin/settings">
          <i class="fas fa-fw fa-cog"></i>
          <span>Settings</span>
        </a>
      </li>
    </ul>
  </nav>

  <!-- Sidebar Footer -->
  <div class="sidebar-footer">
    <a href="/logout" class="nav-link">
      <i class="fas fa-fw fa-sign-out-alt"></i>
      <span>Logout</span>
    </a>
  </div>
</aside>
